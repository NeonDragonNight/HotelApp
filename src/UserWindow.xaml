<Window x:Class="hotelapp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Бронювання" Height="380" Width="420" Background="MediumAquamarine">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="RoomsGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                  SelectionChanged="RoomsGrid_SelectionChanged" Background="Aquamarine">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Number}" Header="Номер"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Тип"/>
                <DataGridTextColumn Binding="{Binding PricePerNight}" Header="Ціна/день"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Ім'я:" VerticalAlignment="Center" Width="60" />
                <TextBox x:Name="TxtName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Телефон:" VerticalAlignment="Center" Width="60" />
                <TextBox x:Name="TxtPhone" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Кількість днів:" VerticalAlignment="Center" Width="100" />
                <TextBox x:Name="TxtDays" Width="60" TextChanged="TxtDays_TextChanged"/>

                <TextBlock x:Name="DoSplati" Text="До сплати: " VerticalAlignment="Center" Width="100" Margin="10,0,0,0"/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Content="Забронювати" Click="BtnBook_Click" Margin="0,8,0,0" Width="120" Background="GreenYellow"/>
                <Button Content="Повернутися" Margin="0,8,0,0" Width="120" Grid.Column="1" Background="Yellow" Click="Button_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
