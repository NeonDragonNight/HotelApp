<Window x:Class="hotelapp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HotelApp" Height="1080" Width="1920" WindowState="Maximized" Background="MediumAquamarine">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="RoomsGrid" FontSize="44" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                  SelectionChanged="RoomsGrid_SelectionChanged" Background="Aquamarine">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Number}" Header="Номер"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Тип"/>
                <DataGridTextColumn Binding="{Binding PricePerNight}" Header="Ціна/день"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Ім'я та прізвище:" FontSize="24" VerticalAlignment="Center" Width="200" />
                <TextBox x:Name="TxtName" FontSize="24" Width="800"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Телефон:" FontSize="24" VerticalAlignment="Center" Width="120" />
                <TextBox x:Name="TxtPhone" FontSize="24" Width="500"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock Text="Кількість днів:" FontSize="24" VerticalAlignment="Center" Width="180" />
                <TextBox x:Name="TxtDays" FontSize="24" Width="160" TextChanged="TxtDays_TextChanged"/>

                <TextBlock x:Name="DoSplati" Text="До сплати: " FontSize="24" VerticalAlignment="Center" Width="400" Margin="50,0,0,0"/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Забронювати" FontSize="24" Click="BtnBook_Click" Margin="0,8,0,0" Width="300" Height="80" Background="GreenYellow"/>
                <Button Content="Головне меню" FontSize="24" Margin="0,8,0,0" Width="300" Height="80" Grid.Column="1" Background="Yellow" Click="Button_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
