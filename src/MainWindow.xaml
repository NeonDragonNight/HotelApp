<Window x:Class="hotelapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotelapp"
        mc:Ignorable="d"
        Title="Store" Height="300" Width="400" Background="Aquamarine">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Content="Бронювання" FontSize="25" HorizontalAlignment="Center"
            VerticalAlignment="Center" Padding="20,5,20,5" Background="OrangeRed" Click="Button_Click_1"/>

        <Button Content="Адміністратор" FontSize="25" Grid.Row="1" HorizontalAlignment="Center" 
            Padding="20,5,20,5" VerticalAlignment="Center" Background="OrangeRed" Click="Button_Click"/>

        <Button Content="Історія" FontSize="25" Grid.Row="2" HorizontalAlignment="Center" 
            Padding="20,5,20,5" VerticalAlignment="Center" Background="OrangeRed" Click="Button_Click_2"/>

    </Grid>
</Window>
