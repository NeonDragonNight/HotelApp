<Window x:Class="hotelapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotelapp"
        mc:Ignorable="d"
        Title="HotelApp" Height="1080" Width="1920" WindowState="Maximized" Background="Aquamarine">

    <Grid>

        <Image Source="/imgs/hotel_img2.png" />

        <StackPanel Margin="100">
            <TextBlock Text="Автоматизована інформаційна система готелю" Background="White" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold"/>
        </StackPanel>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        
        <Button Content="Бронювання" FontSize="25" HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="300" Height="80" Padding="20,5,20,5" Background="Yellow" Click="Button_Click_1"/>

        <Button Content="Адміністратор" FontSize="25" Grid.Column="1" HorizontalAlignment="Center" 
            Padding="20,5,20,5" Width="300" Height="80" VerticalAlignment="Center" Background="Yellow" Click="Button_Click"/>

        </Grid>
    </Grid>
</Window>
