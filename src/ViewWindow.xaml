<Window x:Class="hotelapp.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перегляд" Height="450" Width="600" Background="MediumAquamarine">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Історія замовлень" FontWeight="Bold"/>

        <Button Content="Головне меню" HorizontalAlignment="Right" Margin="0,0,0,0" Width="120" Grid.Row="2" Background="Yellow" Click="Button_Click"/>
        
            <DataGrid x:Name="BookingsGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                      Grid.Row="1" Background="Aquamarine">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding RoomNumb}" Header="Номер"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Заброньоавна"/>
                    <DataGridTextColumn Binding="{Binding Phone}" Header="tel"/>
                    <DataGridTextColumn Binding="{Binding From}" Header="з"/>
                    <DataGridTextColumn Binding="{Binding To}" Header="по"/>
                    <DataGridTextColumn Binding="{Binding TotalPrice}" Header="Загальна вартість"/>
                </DataGrid.Columns>
            </DataGrid>
    
        <Button Content="Оновити" Click="BtnRefresh_Click" Margin="0,0,150,0" Width="100" Grid.Row="2" 
                Background="Yellow"/>

        <Button Content="del" Margin="150,0,0,0" Width="100" Click="delButton_Click" Grid.Row="2" Background="Red"/>
    
    </Grid>
</Window>
