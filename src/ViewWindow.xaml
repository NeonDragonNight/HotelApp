<Window x:Class="hotelapp.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HotelApp" Height="1080" Width="1920" WindowState="Maximized" Background="MediumAquamarine">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Оновити" Click="BtnRefresh_Click" FontSize="24" Width="300" Height="80" 
                    Grid.Column="0" HorizontalAlignment="Center" Background="Yellow"/>
            <Button Content="Видалити обране" FontSize="24" Width="300" Height="80" Click="delButton_Click" 
                    HorizontalAlignment="Center" Grid.Column="1" Background="Red"/>

            <Button Content="Головне меню" FontSize="24" HorizontalAlignment="Center" Grid.Column="2" Width="300" 
                    Height="80" Background="Yellow" Click="Button_Click"/>
            <Button Content="Адміністратор" FontSize="24" HorizontalAlignment="Center" Grid.Column="3" Width="300" 
                    Height="80" Background="Yellow" Click="Button_Click_1"/>

        </Grid>

        <TextBlock Text="Історія замовлень" FontSize="24" FontWeight="Bold"/>

        

        <DataGrid x:Name="BookingsGrid" FontSize="24" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                      Grid.Row="1" Background="Aquamarine">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RoomNumb}" Header="Номер"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Заброньоавна"/>
                <DataGridTextColumn Binding="{Binding Phone}" Header="tel"/>
                <DataGridTextColumn Binding="{Binding From, StringFormat='{}{0:dd/MM/yyyy}'}" Header="з"/>
                <DataGridTextColumn Binding="{Binding To, StringFormat='{}{0:dd/MM/yyyy}'}" Header="по"/>
                <DataGridTextColumn Binding="{Binding TotalPrice}" Header="Загальна вартість"/>
            </DataGrid.Columns>
        </DataGrid>

        

    </Grid>
</Window>
