<Window x:Class="hotelapp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HotelApp" Height="1080" Width="1920" WindowState="Maximized" Background="MediumAquamarine">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="RoomsGrid" FontSize="24" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                  Background="Aquamarine">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="40"/>
                <DataGridTextColumn Binding="{Binding Number}" Header="Номер"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Тип"/>
                <DataGridTextColumn Binding="{Binding PricePerNight}" Header="Ціна/день"/>
                
                <DataGridCheckBoxColumn Binding="{Binding IsAvailable}" Header="Зайнята">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="{x:Type CheckBox}">
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="2" ScaleY="2" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>

                <DataGridTextColumn Binding="{Binding BookingTo, StringFormat='{}{0:dd/MM/yyyy}'}" Header="Зайнята до"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Номер" FontSize="44"/>
            <TextBox x:Name="TxtNumber" FontSize="44" Text="{Binding SelectedItem.Number, 
                ElementName=RoomsGrid, Mode=OneWay}"/>
            <TextBlock Text="Тип" FontSize="44"/>
            <TextBox x:Name="TxtType" FontSize="44" Text="{Binding SelectedItem.Type, 
                ElementName=RoomsGrid, Mode=OneWay}"/>
            <TextBlock Text="Ціна за день" FontSize="44"/>
            <TextBox x:Name="TxtPrice" Text="" FontSize="44"/>

            <CheckBox x:Name="IsAvailableCheckBox" FontSize="12" Content="Зайнята" 
                      IsChecked="{Binding SelectedItem.IsAvailable, ElementName=RoomsGrid, Mode=OneWay}" 
                      Margin="0,5,0,0" IsThreeState="False">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <Button Content="Додати" FontSize="44" Click="BtnAdd_Click" Margin="0,10,0,0" Background="GreenYellow"/>
            <Button Content="Редагувати" FontSize="44" Click="BtnEdit_Click" Margin="0,5,0,0" Background="Yellow"/>
            <Button Content="Видалити" FontSize="44" Click="BtnDelete_Click" Margin="0,5,0,0" Background="Red"/>

            <Button Content="Історія" FontSize="44" Margin="0,150,0,0"  Background="Yellow" Click="Button_Click_1"/>
            <Button Content="Головне меню" FontSize="44" Margin="0,10,0,0"  Background="Yellow" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
