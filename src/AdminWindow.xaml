<Window x:Class="hotelapp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Адмін" Height="450" Width="600" Background="MediumAquamarine">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="RoomsGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                  Background="Aquamarine">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="40"/>
                <DataGridTextColumn Binding="{Binding Number}" Header="Номер"/>
                <DataGridTextColumn Binding="{Binding Type}" Header="Тип"/>
                <DataGridTextColumn Binding="{Binding PricePerNight}" Header="Ціна/день"/>
                <DataGridCheckBoxColumn Binding="{Binding IsAvailable}" Header="Зайнята"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Номер"/>
            <TextBox x:Name="TxtNumber" Text="{Binding SelectedItem.Number, 
                ElementName=RoomsGrid, Mode=OneWay}"/>
            <TextBlock Text="Тип"/>
            <TextBox x:Name="TxtType" Text="{Binding SelectedItem.Type, 
                ElementName=RoomsGrid, Mode=OneWay}"/>
            <TextBlock Text="Ціна за день"/>
            <TextBox x:Name="TxtPrice" Text=""/>
            <CheckBox x:Name="IsAvailableCheckBox" Content="Зайнята" IsChecked="{Binding SelectedItem.IsAvailable, ElementName=RoomsGrid, Mode=TwoWay}" Margin="0,5,0,0" IsThreeState="False"/>

            <Button Content="Додати" Click="BtnAdd_Click" Margin="0,10,0,0" Background="GreenYellow"/>
            <Button Content="Редагувати" Click="BtnEdit_Click" Margin="0,5,0,0" Background="Yellow"/>
            <Button Content="Видалити" Click="BtnDelete_Click" Margin="0,5,0,0" Background="Red"/>
            
            <Button Content="Головне меню" Margin="0,150,0,0" Background="Yellow" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
